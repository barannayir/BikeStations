@model BikeStationsMvc.Data.Bike
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="text-center">Create Bike</h1>
    <hr />
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form asp-action="Create" class="form">
                <div class="form-group">
                    <label asp-for="bike_id" class="control-label">Bike Id</label>
                    <input asp-for="bike_id" class="form-control" required />
                    <span asp-validation-for="bike_id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="station_id" class="control-label">Station Id</label>
                    <input asp-for="station_id" class="form-control" />
                    <span asp-validation-for="station_id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="name" class="control-label">Name</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lon" class="control-label">Longitude</label>
                    <input asp-for="lon" data-val="true" data-val-number="Please enter a valid number" class="form-control" />
                    <span class="text-danger" id="lon-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lat" class="control-label">Latitude</label>
                    <input asp-for="lat" data-val="true" data-val-number="Please enter a valid number" class="form-control" />
                    <span class="text-danger" id="lat-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="is_reserved">Is Reserved</label>
                    <select asp-for="is_reserved" class="form-control">
                        <option value="0">False</option>
                        <option value="1">True</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="is_disabled">Is Disabled</label>
                    <select asp-for="is_disabled" class="form-control">
                        <option value="0">False</option>
                        <option value="1">True</option>
                    </select>
                </div>
                <center>                <div class="form-group mt-2 ">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                </center>

            </form>
        </div>
    </div>

</div>




<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $("input[data-val-number]").on("blur", function () {
            var input = $(this);
            var value = input.val();
            if (isNaN(value)) {
                input.next(".text-danger").remove();
                input.after("<span class='text-danger'>Please enter a valid number</span>");
            } else {
                input.next(".text-danger").remove();
            }
        });
    });

</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
